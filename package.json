{
  "name": "github-copilot-chat-archiver",
  "displayName": "Github Copilot Chat Archiver",
  "description": "Archive Github Copilot chat to markdown or json for backup or memory",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "github-copilot-chat-archiver.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "github-copilot-chat-archiver.exportWorkspaceHistory",
        "title": "Archive Copilot Chat: Export workspace Copilot history",
        "icon": "$(export)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "github-copilot-chat-archiver.exportWorkspaceHistory",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
  "unit-test": "nyc --reporter=lcov --reporter=text --check-coverage --statements 80 --branches 80 --functions 80 --lines 80 mocha --ui tdd -r ts-node/register -r source-map-support/register \"src/test/copilotExporter.test.ts\"",
    "coverage": "npm run unit-test"
  },
  "devDependencies": {
  "nyc": "^15.1.0",
  "mocha": "^10.2.0",
  "ts-node": "^10.9.1",
  "source-map-support": "^0.5.21",
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
  ,"nyc": {
    "all": true,
    "include": ["src/**/*.ts"],
    "extension": [".ts"],
    "reporter": ["lcov", "text"],
    "check-coverage": true,
    "statements": 80,
    "branches": 80,
    "functions": 80,
    "lines": 80
  }
}
